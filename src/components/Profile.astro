---
import type { Children } from "@prisma/client";
import { getChild } from "../utils/db";
import { StorchIcon } from "./Shared/Icons";

export type Props = {
	child: string;
}

const child = await getChild(Astro.props.child) as Children
---

<div class="flex flex-col items-center justify-center mb-8 text-center">
	<img class="w-24 h-24 mx-auto lg:w-60 lg:h-60" src={child.profilePicture} alt={`${child.firstName}
		${child.lastName}`} />
	<h1 class="text-lg font-bold lg:mt-4 lg:text-2xl">{child.firstName} {child.lastName}</h1>
	<div class="mt-1"><span class="inline-block mr-2">
			<StorchIcon />
		</span>{new Intl.DateTimeFormat('de-DE', { dateStyle: 'full' }).format(new Date(child.dob!))}
	</div>
</div>